{
  "name": "nomedia-production",
  "version": "1.0.0",
  "description": "Professional audiovisual production management system",
  "main": "server/index.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec tsx server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "build:server": "tsx server/node-build.ts",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production npm start",
    "start:dev": "NODE_ENV=development npm run dev",
    "setup-db": "tsx server/scripts/update-schema.ts",
    "setup-production": "bash setup-production.sh",
    "deploy:hostinger": "node deploy-hostinger-sqlite.js",
    "backup": "bash backup-system.sh",
    "check-system": "node check-system.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
