# Database Configuration - SQLite (for local development)
DATABASE_TYPE=sqlite
SQLITE_PATH=./nomedia.db

# PostgreSQL Configuration (for production - uncomment when needed)
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://nomedia_user:nomedia_password123@localhost:5432/nomedia_production
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nomedia_production
# DB_USER=nomedia_user
# DB_PASSWORD=nomedia_password123

# Application Configuration
NODE_ENV=development
PORT=8000
FRONTEND_PORT=8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Configuration
API_BASE_URL=http://localhost:8000/api
FRONTEND_URL=http://localhost:8080

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Development Configuration
DEBUG=true
LOG_LEVEL=debug
